<h1>Lista de Usuarios</h1>

<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Rol</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{this.first_name}}</td>
            <td>{{this.email}}</td>
            <td>{{this.role}}</td>
            <td>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<form action="/api/sessions/current" method="GET">
    <button type="submit">Ir al perfil</button>
</form>
